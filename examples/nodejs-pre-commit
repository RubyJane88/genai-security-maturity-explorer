## ğŸŒ Method 2: Non-Python Projects

### Node.js/JavaScript Example

<function_calls>
<invoke name="create_file">
<parameter name="content">#!/bin/bash
# Pre-commit hook for Node.js projects
# Save as: .git/hooks/pre-commit

set -e

echo "ğŸ” Running pre-commit checks for Node.js project..."
echo ""

# Check Node version
echo "1ï¸âƒ£  Checking Node.js version..."
NODE_VERSION=$(node --version)
echo "   Current: $NODE_VERSION"

REQUIRED_VERSION="18"
CURRENT_MAJOR=$(echo $NODE_VERSION | sed 's/v//' | cut -d. -f1)

if [ "$CURRENT_MAJOR" -ge "$REQUIRED_VERSION" ]; then
    echo "   âœ… Node.js $CURRENT_MAJOR >= $REQUIRED_VERSION"
else
    echo "   âŒ Node.js $CURRENT_MAJOR < $REQUIRED_VERSION (required)"
    exit 1
fi
echo ""

# Check if node_modules exists
echo "2ï¸âƒ£  Checking dependencies..."
if [ ! -d "node_modules" ]; then
    echo "   âŒ node_modules not found"
    echo "   Run: npm install"
    exit 1
else
    echo "   âœ… node_modules found"
fi
echo ""

# Check for package.json
echo "3ï¸âƒ£  Checking package.json..."
if [ -f "package.json" ]; then
    echo "   âœ… package.json found"
else
    echo "   âŒ package.json not found"
    exit 1
fi
echo ""

# Run linter (ESLint)
echo "4ï¸âƒ£  Running ESLint..."
if command -v eslint &> /dev/null; then
    npm run lint > /dev/null 2>&1
    if [ $? -eq 0 ]; then
        echo "   âœ… No linting errors"
    else
        echo "   âŒ Linting errors found"
        npm run lint
        exit 1
    fi
else
    echo "   âš ï¸  ESLint not found (skipped)"
fi
echo ""

# Run tests
echo "5ï¸âƒ£  Running tests..."
if grep -q "\"test\":" package.json; then
    npm test > /dev/null 2>&1
    if [ $? -eq 0 ]; then
        echo "   âœ… All tests passed"
    else
        echo "   âŒ Tests failed"
        npm test
        exit 1
    fi
else
    echo "   âš ï¸  No test script found (skipped)"
fi
echo ""

# Check for security vulnerabilities
echo "6ï¸âƒ£  Checking for vulnerabilities..."
npm audit --audit-level=moderate > /dev/null 2>&1
if [ $? -eq 0 ]; then
    echo "   âœ… No moderate/high vulnerabilities"
else
    echo "   âš ï¸  Vulnerabilities found (run: npm audit)"
fi
echo ""

echo "âœ… All pre-commit checks passed!"
exit 0
